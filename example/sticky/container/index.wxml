<view class="details">
    <view class="details-header">
        <mt-cell title="示例">
            <mt-icon slot="left" type="custom" name="icon-comp--sticky" size="64" class="component-icon"></mt-icon>
        </mt-cell>
        <view class="details-header__desc">向下滑动页面，固定容器范围内吸附。</view>
    </view>
    <view>
        <view class="sticky">
            <view id="stickyContainer" class="sticky-container">
                <mt-sticky container="stickyContainer" scrollTop="{{scrollTop}}">
                    <view class="sticky__title">容器标题</view>
                </mt-sticky>
                <view class="demo-placeholder" style="height: 300px;">容器内容</view>
            </view>
            <mt-cell-group>
                <mt-cell
                    wx:for="{{20}}"
                    wx:key="index"
                    icon="/example/images/meet.png"
                    title="名称">
                </mt-cell>
            </mt-cell-group>
        </view>
    </view>
</view>