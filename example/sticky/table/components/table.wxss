.table {
    position: relative;
    font-size: 28rpx;
    background: #fff;
    border-right: none;
    border-radius: 8rpx;
    overflow: hidden;
}
.thead {
    border-bottom: none;
    display: flex;
    justify-content: flex-start;
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    overflow: visible;
    color: #333;
    border: 1px solid #eee;
    box-sizing: border-box;
    font-size: 32rpx;
}
.thead .td {
    padding: 20rpx 10rpx;
    font-weight: bold;
    display: inline-block;
    text-align: center;
    border-right: 1rpx solid #fff;
}
.thead .td:last-child {
    border-right: none;
}
.thead-border {
    background: #f5f6f8;
}
.thead-border .td {
    border-right: 1rpx solid #eee;
}
.thead-border .td:last-child {
    border-right: none;
}
