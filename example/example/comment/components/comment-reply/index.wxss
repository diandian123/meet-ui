.comment-popup__scroll {
  height: 62vh;
}

.comment-popup__list {
  padding: 0 0 30rpx;
  margin-bottom: 50rpx;
}

.comment-popup__first {
  display: block;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.comment-popup__first {
  position: relative;
}

.comment-popup__first::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #d8d8d8;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .comment-popup__first::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .comment-popup__first::after {
    transform: scaleY(0.333);
  }
}

.comment-popup__first .mt-comment {
  margin-bottom: 0;
}

.comment-popup__count {
  font-weight: bold;
  font-size: 34rpx;
  margin-bottom: 30rpx;
}

.comment-popup__ft {
  padding: 24rpx 30rpx;
  border-top: 2rpx solid #e9e9e9;
}

.comment-popup__ft__input {
  height: 66rpx;
  background: #f5f6f8;
  border: 1px solid #e9e9e9;
  box-shadow: 0 0 6rpx 0 rgba(233, 233, 233, 0.37);
  border-radius: 66rpx;
  font-size: 32rpx;
  color: #808080;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
