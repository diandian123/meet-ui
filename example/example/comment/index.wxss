page {
  background: #ffffff;
}

.container {
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.main {
  flex: 1;
  position: relative;
}

.scroll-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.scroll-view .mt-cell__ct-title {
  font-size: 36rpx !important;
  font-weight: bold;
}

.footer {
  padding-top: 4rpx;
}
