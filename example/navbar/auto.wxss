.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  height: 100vh;
  overflow: hidden;
}

.content {
  flex: 1;
  position: relative;
}

.main {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
}

.mod-swiper {
  padding: 24rpx 0 0;
  background-color: #fff;
}

.mod-grid {
  padding: 0 36rpx;
  background-color: #fff;
}

.mod-grid .mt-grid__main {
  justify-content: space-between !important;
}

.mod-grid .mt-grid__main .mt-grid__item {
  width: 100rpx !important;
}

.mod-curtain {
  height: 480rpx;
}

.mod-curtain__img {
  width: 100%;
  height: 100%;
}

.mod-list {
  padding: 24rpx 0;
}
