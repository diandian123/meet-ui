/* demo/comment/index.wxss */
.demo-comment__popup {
  margin: 78rpx 30rpx 32rpx;
  max-height: 78vh;
  overflow-y: scroll;
}

.demo-comment__list {
  padding-bottom: 118rpx;
}

.demo-comment__popup .mt-textarea {
  background: #f7f8fa;
  padding: 24rpx 30rpx;
}

.demo-comment__popup .mt-commet {
  margin-bottom: 48rpx;
}

.demo-comment__popup .mt-input {
  height: 66rpx;
  background: #f7f8fa;
  border: 1px solid #e9e9e9;
  box-shadow: 0 0 6rpx 0 rgba(233, 233, 233, 0.37);
  border-radius: 45rpx;
  padding-left: 30rpx;
}

.demo-comment__input {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  padding: 24rpx 30rpx 60rpx;
  background: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}

.demo-comment__popup-ft {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
}

.demo-comment__popup-ft .mt-btn {
  padding: 0;
  width: 120rpx !important;
  height: 54rpx;
  font-size: 26rpx;
}

.demo-popup .mt-popup__mask {
  z-index: 9002;
}

.demo-popup .mt-popup {
  z-index: 9003;
}

.demo-actionsheet .mt-actionsheet__mask {
  z-index: 9004;
}

.demo-actionsheet .mt-actionsheet {
  z-index: 9005;
}

.pannel-bd-placeholder {
  height: 1000rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}
