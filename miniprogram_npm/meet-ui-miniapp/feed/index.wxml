<view wx:if="{{options.feedId}}" class="mt-feed"><view bindtap="handleUser" class="mt-feed__hd"><mt-avatar src="{{options.userInfo.avatar}}" size="m" class="mt-feed__hd-lt"></mt-avatar><view class="mt-feed__hd-ct"><view class="mt-feed__user"><text class="mt-feed__username">{{options.userInfo.userName || '匿名用户'}}</text><view wx:if="{{options.userInfo.userType}}" class="mt-feed__usertype__wp"><image src="{{options.userInfo.userType.icon}}" style="width: {{options.userInfo.userType.width}}rpx; height: {{options.userInfo.userType.height}}rpx;" class="mt-feed__usertype"></image></view></view><text wx:if="{{options.publishTime}}" class="mt-feed__time">{{publishTime}}</text></view><view wx:if="{{options.readCount && hasViews}}" class="mt-feed__read">{{options.readCount}}浏览</view><view wx:if="{{hasMore}}" catchtap="handleMore" class="mt-feed__more"><mt-icon name="mt-icon--more" size="60" color="#B0B0B0"></mt-icon></view></view><view bindtap="handleDetail" class="mt-feed__bd"><view catchtap="handleContent" class="mt-feed__bd-tp"><view class="mt-feed__content"><view class="mt-feed__content__wp {{hasLimit ? 'mt-feed__content__wp--limit' : ''}}"><view class="mt-feed__content__bd"><text wx:if="{{hasTopic && options.topic.id}}" catchtap="handleTopic" class="mt-feed__content--topic">{{options.topic.name}}</text><rich-text wx:if="{{isRich}}" nodes="{{options.content}}" class="mt-feed__content__text"></rich-text><text wx:else class="mt-feed__content__text">{{options.content}}</text></view></view><text wx:if="{{hasLimit && overflow}}" decode="{{true}}" catchtap="handleExpand" class="mt-feed__content__expand">...全文</text></view></view><view wx:if="{{options.imageList && options.imageList.length}}" class="mt-feed__images"><mt-album width="{{albumWidth}}" items="{{options.imageList}}" albumWidth="{{albumWidth}}" imageRadius="{{imageRadius}}" maxCount="{{imageMaxCount}}" lazyLoad="{{lazyLoad}}" preview="{{hasPreview}}" rowGap="{{imageRowGap}}" columnGap="{{imageColumnGap}}" column="{{imageColumn}}" bindmore="handleMoreImage"></mt-album></view></view><view wx:if="{{hasFooter}}" class="mt-feed__ft"><mt-tag wx:if="{{options.category.id && hasCategory}}" bindtap="handleCategory" bgColor="#F8F8F8" maxWidth="{{maxTagWidth}}" textColor="#808080">{{options.category.name}}</mt-tag><view class="mt-feed__operate"><button wx:if="{{hasShare}}" bindtap="handleShare" open-type="{{shareType === 'card' ? 'share' : ''}}" data-options="{{options}}" class="mt-feed__share"><mt-icon name="mt-icon--share" color="#B0B0B0" size="44"></mt-icon></button><view wx:if="{{hasComment}}" bindtap="handleComment" class="mt-feed__ml"><mt-icon name="mt-icon--comment" color="#B0B0B0" size="44"></mt-icon><text class="mt-feed__num">{{options.commentCount || ''}}</text></view><view wx:if="{{hasApprove}}" bindtap="handleApprove" class="mt-feed__ml {{!approveAnim && options.approveAnim ? 'mt-feed__approve--ani' : ''}}"><mt-icon name="{{options.hasApprove ? 'mt-icon--approve-b' : 'mt-icon--approve'}}" color="{{options.hasApprove ? '#fa5151' : '#B0B0B0'}}" size="44"></mt-icon><text class="mt-feed__num">{{options.approveCount || ''}}</text></view></view></view></view>