<view class="mt-tab mt-tab--{{position}}" style="opacity: {{opacity}};"><block wx:if="{{sticky}}"><mt-sticky container="{{container}}" offsetTop="{{offsetTop}}" scrollTop="{{scrollTop}}"><include src="./header.wxml"/></mt-sticky></block><block wx:else><include src="./header.wxml"/></block><view wx:if="{{blurEffect}}" class="mt-tab__blur"></view><block wx:if="{{type === 'click'}}"><view class="mt-tab__bd" style="{{contentHeight > 10 ? 'height:' + contentHeight + 'px;' : 'height: auto'}}"><view wx:for="{{items}}" wx:key="index" class="mt-tab__content" wx:if="{{index == selectedIndex}}"><slot name="{{item.id ? item.id : 'tab-' + index}}"></slot></view></view></block><block wx:else><swiper bindchange="handleSwiper" duration="300" current="{{selectedIndex}}" vertical="{{position==='left'}}" class="mt-tab__bd" style="{{contentHeight > 10 ? 'height:' + contentHeight + 'px;': 'height: 500rpx'}}"><swiper-item wx:for="{{items}}" wx:key="index" class="mt-tab__content"><slot name="{{item.id ? item.id : 'tab-' + index}}"></slot></swiper-item></swiper></block></view>