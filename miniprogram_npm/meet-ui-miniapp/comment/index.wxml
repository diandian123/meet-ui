<view wx:if="{{options.commentId}}" class="mt-comment mt-comment--{{type}}"><view class="mt-comment__header"><view bindtap="handleUser" class="mt-comment__user"><mt-avatar src="{{options.userInfo.avatar}}" size="m" class="mt-comment__avatar"></mt-avatar><text wx:if="{{options.userInfo.userRole}}" class="mt-comment__role">{{options.userInfo.userRole}} |</text><text wx:if="{{options.userInfo.userName}}" class="mt-comment__username">{{options.userInfo.userName}} {{options.isMe ? '(我)' : ''}}</text><image wx:if="{{options.userInfo.userType && options.userInfo.userType.icon}}" src="{{options.userInfo.userType.icon}}" style="width: {{options.userInfo.userType.width}}rpx; height: {{options.userInfo.userType.height}}rpx;" class="mt-comment__usertype"></image><view wx:if="{{options.quality}}" class="mt-comment__quality"><mt-tag bgColor="#FEC51D" textColor="#fff">优质内容</mt-tag></view></view><view wx:if="{{type === 'preset' && hasMore}}" bindtap="handleMore" class="mt-comment__more"><mt-icon name="mt-icon--more" size="60" color="#B0B0B0"></mt-icon></view></view><view class="mt-comment__content"><view class="mt-comment__content__wp {{hasLimit && !expandState ? 'mt-comment__content__wp--limit' : ''}}"><view class="mt-comment__content__bd"><slot name="prefix"></slot><text wx:if="{{hasRelation}}" class="mt-comment__content__reply">回复 {{options.toUserInfo.userName}}：</text><text>{{options.content}}</text></view></view><text wx:if="{{hasLimit && overflow}}" bindtap="handleExpand" class="{{expandState ? 'mt-comment__content__collapse' : 'mt-comment__content__expand'}}">{{expandState ? '收起' : '...展开'}}</text></view><view wx:if="{{hasReply && options.replyCount > 0}}" bindtap="handleReply" class="mt-comment__reply"><view wx:for="{{options.replyList}}" wx:key="commentId" class="mt-comment__reply__item"><text class="mt-comment__reply__name">{{item.userInfo.userName}}</text>: {{item.content}}</view><view wx:if="{{options.replyCount > 2}}" class="mt-comment__reply--more">查看全部{{options.replyCount}}条回复</view></view><view wx:if="{{type === 'preset'}}" class="mt-comment__operate"><text wx:if="{{options.commentTime}}" class="mt-comment__time">{{commentTime}}</text><view class="mt-comment__operate__items"><button wx:if="{{hasShare}}" bindtap="handleShare" open-type="{{shareType === 'card' ? 'share' : ''}}" class="mt-comment__share"><mt-icon name="mt-icon--share" color="#B0B0B0" size="44"></mt-icon></button><view bindtap="handleReply" class="mt-comment__ml"><mt-icon name="mt-icon--comment" color="#B0B0B0" size="44"></mt-icon></view><view bindtap="handleApprove" class="mt-comment__ml {{options.approveAnim? 'mt-comment__approve--ani' : ''}}"><mt-icon name="{{options.hasApprove ? 'mt-icon--approve-b' : 'mt-icon--approve'}}" color="{{options.hasApprove ? '#fa5151' : '#B0B0B0'}}" size="44"></mt-icon><text class="mt-comment__num">{{options.approveCount || ''}}</text></view></view></view></view>