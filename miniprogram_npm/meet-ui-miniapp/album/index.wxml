<view wx:if="{{items.length === 1}}" class="mt-album mt-album--single"><block wx:for="{{items}}" wx:key="index"><view catchtap="previewImage" data-index="{{index}}" class="mt-album__item" style="width: {{imageWidth}}; height: {{imageHeight}}; border-radius: {{imageRadius}}rpx;"><image binderror="imageError" mode="{{imageMode}}" src="{{item.url}}" lazy-load="{{lazyLoad}}" data-imgindex="{{index}}" class="mt-album__item-image"></image></view></block></view><view wx:else class="mt-album" style="grid-template-columns: repeat({{column}}, 1fr); grid-column-gap:{{columnGap}}px; grid-row-gap:{{rowGap}}px;"><block wx:for="{{maxCount > 0 ? showUrls: items}}" wx:key="index"><view catchtap="previewImage" data-index="{{index}}" class="mt-album__item {{index + 1 === maxCount ? 'mt-album__item-mask' : ''}}" style="width: {{imageWidth}}; height: {{imageHeight}}; border-radius: {{imageRadius}}rpx;"><image binderror="imageError" mode="{{imageMode}}" src="{{item.url}}" lazy-load="{{lazyLoad}}" data-imgindex="{{index}}" class="mt-album__item-image"></image><view wx:if="{{maxCount === index+1 && items.length !== maxCount}}" catchtap="handleMore" class="mt-album__item-text">+{{items.length - maxCount}}</view></view></block></view>