<view class="mt-feedback-bar"><view bindtap="handleComment" class="mt-feedback-bar__input">{{placeholder}}</view><mt-badge wx:if="{{hasComment}}" position="top" value="{{options.commentCount || 0}}" maxValue="{{maxValue || 99}}" bindtap="handleComment" class="mt-feedback-bar__icon {{options.commentCount >= 100 ? 'mt-badge--three' : '' }} {{options.commentCount > 9 && options.commentCount < 100 ? 'mt-badge--two' : '' }}"><mt-icon bindtap="handleCommentList" name="mt-icon--comment"></mt-icon></mt-badge><mt-badge wx:if="{{hasApprove}}" position="top" value="{{options.approveCount || 0}}" maxValue="{{maxValue || 99}}" bindtap="handleApprove" class="mt-feedback-bar__icon {{options.approveCount >= 100 ? 'mt-badge--three' : '' }} {{options.approveCount > 9 && options.approveCount < 100 ? 'mt-badge--two' : '' }}"><mt-icon name="{{options.hasApprove ? 'mt-icon--approve-b' : 'mt-icon--approve'}}" color="{{options.hasApprove ? '#fa5151' : ''}}"></mt-icon></mt-badge><mt-icon wx:if="{{hasCollect}}" name="{{options.hasCollect ? 'mt-icon--collect-b' : 'mt-icon--collect'}}" color="{{options.hasCollect ? '#fec51d' : ''}}" bindtap="handleCollect" class="mt-feedback-bar__icon"></mt-icon><button wx:if="{{hasShare}}" open-type="{{shareType === 'card' ? 'share' : ''}}" bindtap="handleShare" class="mt-feedback-bar__icon mt-feedback-bar__share"><mt-icon name="mt-icon--share"></mt-icon></button></view>