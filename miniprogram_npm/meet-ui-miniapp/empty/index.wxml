<view class="mt-empty {{height > 0 ? 'mt-empty--local' : 'mt-empty--page'}}" style="background-color: {{bgColor}}; {{height > 0 ? 'height: ' + height + 'rpx': ''}}"><block wx:if="{{type === 'custom'}}"><slot></slot></block><block wx:else><image src="{{icon || './images/default.png'}}" class="mt-empty__icon"></image><view class="mt-empty__text">{{text || '暂无数据~'}}</view><mt-button wx:if="{{hasBtn}}" bindtap="handleButton" type="plain" size="s" class="mt-empty__btn">{{btnText}}</mt-button></block></view>