<view class="mt-progress"><block wx:if="{{type === 'line'}}"><view class="mt-progress__line" style="height: {{height}}rpx; line-height: {{height}}rpx"><view class="mt-progress__line--out" style="border-radius: {{radius}}rpx; background:{{bgColor}}"><view class="mt-progress__line--in" animation="{{widthAnimation}}" style="background: {{curColor}}; border-radius: {{radius}}rpx;"><text wx:if="{{valueInside}}" class="mt-progress__line--in__text" style="color: {{fontColor}}">{{value}}%</text><view wx:if="{{stripe}}" class="mt-progress__line--in__stripe"></view></view></view><view wx:if="{{showValue && !valueInside}}" class="mt-progress__line__text" style="color: {{fontColor}}">{{value}}%</view></view></block><block wx:elif="{{type==='image'}}"><view class="mt-progress__line" style="height: {{height}}rpx; line-height: {{height}}rpx"><view class="mt-progress__image" style="border-radius: {{radius}}rpx; background: {{bgColor}}"><image src="{{image}}" class="mt-progress__image--cur" style="border-radius: {{radius}}rpx; transform: translateX(-{{100-value}}%)"></image><text wx:if="{{valueInside}}" style="width:{{value}}%; color:{{fontColor}}" class="mt-progress__image--in__text">{{value}}%</text></view><view class="mt-progress__line__text" style="color: {{fontColor}};" wx:if="{{showValue && !valueInside}}">{{value}}%</view></view></block><block wx:elif="{{type === 'circle'}}"><view class="mt-progress__circle" style="background:{{curColor}}; height: {{circleDiam}}px; width: {{circleDiam}}px;"><view class="mt-progress__circle--left" style="transform:{{rotateLeft}}; width: {{circleDiam}}px; height: {{circleDiam}}px; clip:rect(0, {{circleDiam / 2}}px, auto, 0); background:{{bgColor}}; transition-duration:{{durationLeft}};"></view><view class="mt-progress__circle--right" style="transform:{{rotateRight}}; width: {{circleDiam}}px; height: {{circleDiam}}px; clip:rect(0, auto, auto, {{circleDiam / 2}}px); background: {{backgroundRight}}; transition-duration:{{durationRight}};"></view><view class="mt-progress__mask" style="background: {{circleCenterColor}}; width: {{cententDiam}}px; height: {{cententDiam}}px; left: {{(circleDiam - cententDiam) / 2}}px; top: {{(circleDiam - cententDiam) / 2}}px"><text wx:if="{{showValue}}" class="mt-progress__circle__percent" style="color: {{fontColor}};">{{value}}%</text><text wx:else class="mt-progress__circle__percent" style="color: {{fontColor}};"><slot name="label"></slot></text></view></view></block></view>