<view class="mt-error {{height > 0 ? 'mt-error--local' : 'mt-error--global'}}" style="background-color: {{bgColor}}; {{height > 0 ? 'height: ' + height + 'rpx': ''}}"><block wx:if="{{type === 'custom'}}"><slot></slot></block><block wx:else><view class="mt-error__bd"><image src="{{icon || './images/default.png'}}" class="mt-error__icon"></image><view class="mt-error__text">{{text || '服务出问题了，请稍后再试～'}}</view><mt-button wx:if="{{hasBtn}}" type="plain" size="s" bindtap="handleButton" class="mt-error__btn">{{btnText}}</mt-button></view><view wx:if="{{traceId}}" class="mt-error__ext">{{traceId}}</view></block></view>