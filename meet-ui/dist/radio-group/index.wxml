<view class="mt-radios mt-radios--{{type}} mt-radios--{{direction}} {{ hasDivider ? 'mt-radios--divider' : ''}}"><view wx:if="{{title}}" class="mt-radios__title">{{title}}</view><view class="mt-radios__items" style="grid-column-gap: {{type === 'button' ? columnGap : 0 }}rpx; grid-row-gap: {{type === 'button' ? rowGap : 0 }}rpx; grid-template-columns: repeat({{column}}, minmax(0,1fr));"><mt-radio wx:for="{{items}}" wx:key="index" bindchange="radioChange" data-index="{{index}}" type="{{type}}" disabled="{{item.disabled || false}}" checked="{{item.checked}}" checkedColor="{{checkedColor}}" value="{{item.value}}" iconPosition="{{iconPosition || 'left'}}"><view wx:if="{{iconPosition === 'right'}}" slot="left">{{item.label}}</view><block wx:else>{{item.label}}</block></mt-radio></view></view>