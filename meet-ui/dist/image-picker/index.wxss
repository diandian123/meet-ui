.mt-imagepicker{position:relative;display:grid;grid-template-columns:repeat(3,1fr);grid-column-gap:12rpx;grid-row-gap:12rpx}.mt-imagepicker__item{border-radius:16rpx;background-color:#f5f6f8;display:flex;flex-direction:column;align-items:center;justify-content:center;flex-wrap:nowrap}.mt-imagepicker__item:after{content:'';display:block;padding-top:100%}.mt-imagepicker__item-bd{position:absolute;transition:all 0 linear;display:flex;flex-direction:column;align-items:center;justify-content:center;flex-wrap:nowrap}.mt-imagepicker__item-bd.item__draging{transition-duration:.2s}.mt-imagepicker__item-bd.item__actived{opacity:.8;z-index:1000;transition-duration:0s}.mt-imagepicker__item-bd .mt-imagepicker__item-image{width:100%;height:100%;border-radius:16rpx}.mt-imagepicker__item-bd.item__hidden{display:none!important}.mt-imagepicker__item__del{width:40rpx;height:40rpx;border:1px solid transparent;background-color:rgba(0,0,0,.5);position:relative;display:inline-block;border-radius:0 16rpx 0 8rpx;position:absolute;top:0;right:0;z-index:0}.mt-imagepicker__item__del::after{content:'';width:20rpx;height:2rpx;border-radius:2rpx;background-color:#fff;position:absolute;top:50%;left:50%;z-index:0;transform:translate(-50%,-50%) rotate(45deg)}.mt-imagepicker__item__del::before{content:'';width:2rpx;height:20rpx;border-radius:2rpx;background-color:#fff;position:absolute;top:50%;left:50%;z-index:0;transform:translate(-50%,-50%) rotate(45deg)}