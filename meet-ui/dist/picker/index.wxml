<view class="mt-picker {{bgColor !== '#fff' ? 'mt-picker--bg' : ''}}" style="background: {{bgColor}};"><view wx:if="{{trigger === 'field'}}" bindtap="setVisible" class="mt-picker__select {{selectedText ? '' : 'mt-picker__select--placeholder'}}"><view class="mt-picker__select__content"><view class="mt-picker__select__text">{{selectedText || placeholder}}</view><view wx:if="{{showDelete&&selectedText}}" catchtap="handleDelete" class="mt-picker__clear"><view class="mt-picker__clear-icon"></view></view></view></view><mt-popup type="picker" visible="{{visible}}" hasTopClose="{{false}}" bindclose="setVisible"><view class="mt-picker__content"><view class="mt-picker__popup-hd"><view bindtap="handlBtn" data-type="cancel" class="mt-picker__cancel" hover-class="mt-picker__cancel--hover" hover-stay-time="70" style="color: {{cancelColor}}">{{cancelText}}</view><view wx:if="{{title}}" class="mt-picker__title">{{title}}</view><view bindtap="handlBtn" data-type="confirm" class="mt-picker__confirm" hover-class="mt-picker__confirm--hover" hover-stay-time="70" style="color: {{confirmColor}}">{{confirmText}}</view></view><view class="mt-picker__popup-bd"><block wx:if="{{columns[0].length>0}}"><picker wx:for="{{columns}}" wx:key="index" bindchange="handleChange" columnIndex="{{index}}" items="{{item}}" current="{{formatSelect[index]||0}}" visibleItems="{{visibleItems}}" class="mt-picker__column"/></block><view wx:else class="mt-picker__nodate">- 暂无选项 -</view></view></view></mt-popup></view>