<mt-popup type="actionsheet" visible="{{visible}}" zIndex="{{zIndex}}" hasTopClose="{{false}}" maskClosable="{{maskClosable}}" bindclose="handleCancel"><view class="mt-actionsheet mt-actionsheet--{{itemPositon}}"><view wx:if="{{title}}" class="mt-actionsheet__title">{{ title }}</view><view wx:if="{{desc}}" class="mt-actionsheet__desc">{{ desc }}</view><scroll-view scroll-y class="mt-actionsheet__items"><view wx:for="{{items}}" wx:key="index" class="mt-actionsheet__item"><button data-index="{{index}}" open-type="{{item.disabled ? '' : item.openType}}" bindtap="{{item.disabled ? '' : 'handleSelect'}}" bindgetphonenumber="handleGetPhoneNumber" bindcontact="handleContact" class="mt-actionsheet__action {{item.disabled ? 'mt-actionsheet__action--disabled' : ''}} {{index === current ? 'mt-actionsheet__action--active' : ''}}" hover-class="mt-actionsheet__action--hover" style="{{item.color ? 'color: ' + item.color : ''}}"><view class="mt-actionsheet__action-bd" style="{{index === current ? 'color: ' + activeColor : ''}}"><image wx:if="{{item.icon}}" src="{{item.icon}}" class="mt-actionsheet__action-icon"></image><view class="mt-actionsheet__action-text">{{ item.label }}<text wx:if="{{item.desc}}" class="mt-actionsheet__action-desc">{{item.desc}}</text></view></view><label wx:if="{{itemPositon === 'left' && index === current}}" class="mt-actionsheet__action-checked" style="border-color: {{activeColor}}"></label></button></view></scroll-view><block wx:if="{{type === 'confirm'}}"><view class="mt-actionsheet__confirm" hover-class="mt-actionsheet__action--hover" hover-stay-time="70" bindtap="handleComfirm">{{confirmText}}</view></block><block wx:elif="{{cancelText}}"><view class="mt-actionsheet__cancel" hover-class="mt-actionsheet__action--hover" hover-stay-time="70" bindtap="handleCancel">{{cancelText}}</view></block></view></mt-popup>