.mt-cells__title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bolder;
  padding: 30rpx 36rpx;
}

.mt-cells__title {
  position: relative;
}

.mt-cells__title::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-cells__title::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-cells__title::after {
    transform: scaleY(0.333);
  }
}

.mt-cells--list,
.mt-cells--avatar {
  background-color: #ffffff;
}

.mt-cells--list .mt-cell,
.mt-cells--avatar .mt-cell {
  position: relative;
}

.mt-cells--list .mt-cell::after,
.mt-cells--avatar .mt-cell::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 36rpx;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-cells--list .mt-cell::after,
  .mt-cells--avatar .mt-cell::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-cells--list .mt-cell::after,
  .mt-cells--avatar .mt-cell::after {
    transform: scaleY(0.333);
  }
}

.mt-cells--avatar .mt-cell__lt {
  margin-right: 24rpx;
}

.mt-cells--card {
  padding: 0 36rpx;
}

.mt-cells--card .mt-cell {
  margin-bottom: 24rpx;
  padding: 24rpx 30rpx;
}

.mt-cells--card .mt-cell__lt {
  margin-right: 24rpx;
}

.mt-cells--card .mt-cell__lt:empty {
  margin-right: 0;
}

.mt-cells--simple {
  background-color: #ffffff;
}
