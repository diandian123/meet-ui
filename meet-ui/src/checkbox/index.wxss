.mt-checkbox--check,
.mt-checkbox--square {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  padding: 24rpx 36rpx;
}

.mt-checkbox--button {
  display: block;
}

.mt-checkbox--button .mt-checkbox__content {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.mt-checkbox__content {
  background: #f5f6f8;
  border-radius: 16rpx;
  padding: 24rpx 36rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333333;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mt-checkbox__content--checked {
  font-weight: bold;
  color: #07c16c;
  background-color: #ecfbf4;
}

.mt-checkbox__original {
  display: none;
  opacity: 0;
}

.mt-checkbox--disabled {
  opacity: 0.5;
}

.mt-checkbox__text {
  flex: 1;
  vertical-align: middle;
  margin-left: 15rpx;
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
}

.mt-checkbox__text--left {
  margin-left: 0;
  margin-right: 20rpx;
}
