.mt-dropdown__menu {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 11;
  overflow-y: auto;
}

.mt-dropdown__menu .menu--active {
  color: #07c16c;
}

.mt-icon--success {
  color: #07c16c;
}

.mt-dropdown__popup .mt-popup__mask {
  position: absolute;
}

.mt-dropdown__popup .mt-popup--top {
  position: absolute;
  display: flex;
  max-height: 100%;
}

.mt-dropdown__popup .mt-popup--bottom {
  position: absolute;
  display: flex;
  flex: 1;
  padding-bottom: 0 !important;
}

.mt-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9;
  background: transparent;
}

.mt-dropdown__menu__checkbox {
  padding-top: 36rpx;
  padding-bottom: 36rpx;
}

.mt-dropdown__menu__nodate {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  height: 200rpx;
  color: #808080;
}

.mt-dropdown__check__button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 36rpx 24rpx;
}

.mt-dropdown__check__button--rest {
  width: 324rpx;
}

.mt-dropdown__check__button--confrim {
  width: 324rpx;
}
