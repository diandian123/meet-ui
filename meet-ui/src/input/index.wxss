.mt-input {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  padding: 24rpx 24rpx 24rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  font-size: 32rpx;
}

.mt-input--error {
  border: 1px solid #fa5151 !important;
}

.mt-input--focus {
  border: 1px solid #07c16c !important;
}

.mt-input--disabled {
  background-color: #f1f3f7 !important;
}

.mt-input--disabled .mt-input__content {
  color: #808080;
}

.mt-input__icon {
  width: 36rpx;
  height: 36rpx;
  padding: 0 25rpx;
  box-sizing: content-box;
}

.mt-input__icon {
  position: relative;
}

.mt-input__icon::before {
  content: '';
  transform-origin: 0 0;
  border-right: 1px solid #bbbbbb;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  transform-origin: 0 right;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-input__icon::after {
    transform: scaleX(0.5);
  }
  .mt-input__icon::before {
    transform: scaleX(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-input__icon::after {
    transform: scaleX(0.333);
  }
  .mt-input__icon::before {
    transform: scaleX(0.333);
  }
}

.mt-input__icon::before {
  top: -20rpx;
  bottom: -20rpx;
}

.mt-input__content {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  padding-left: 24rpx;
  height: 40rpx;
  min-height: 40rpx;
}

.mt-input__placeholder {
  font-size: 32rpx;
  color: #cccccc;
}

.mt-input__clear {
  height: 100%;
  margin-left: 30rpx;
  line-height: 0;
}

.mt-input__clear-icon {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #d8d8d8;
  background-color: #d8d8d8;
  position: relative;
  display: inline-block;
  border-radius: 50%;
}

.mt-input__clear-icon::after {
  content: '';
  width: 18rpx;
  height: 2rpx;
  border-radius: 2rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%) rotate(45deg);
}

.mt-input__clear-icon::before {
  content: '';
  width: 2rpx;
  height: 18rpx;
  border-radius: 2rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%) rotate(45deg);
}

.mt-input__eye {
  width: 36rpx;
  height: 36rpx;
  margin-left: 30rpx;
}

.mt-input__code {
  padding-left: 25rpx;
  font-size: 32rpx;
  color: #bbbbbb;
}

.mt-input__code--active {
  color: #07c16c;
}

.mt-input--noborder {
  border: none !important;
}

.mt-input--noborder .mt-input__content {
  height: 44rpx;
  min-height: 44rpx;
}
