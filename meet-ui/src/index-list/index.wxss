.mt-indexlist {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.mt-indexlist .mt-checkbox {
  padding-left: 0;
  padding-right: 6rpx;
}

.mt-indexlist .mt-checkbox__text {
  display: none;
}

.mt-indexlist__cell--empty .mt-cell__lt {
  margin-right: 0;
}

.mt-indexlist__title {
  font-size: 32rpx;
  color: #5a5a5a;
  padding: 20rpx 30rpx;
  background-color: #f5f6f8;
}

.mt-indexlist__main {
  position: relative;
  width: 100%;
  background-color: #f5f6f8;
  margin-bottom: 24rpx;
}

.mt-indexlist__groups .mt-indexlist__group .mt-cells__title {
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
  top: 0;
  z-index: 2;
  background: #f5f6f8;
  font-size: 24rpx;
  font-weight: bold;
  color: #808080;
  padding: 0 36rpx;
}

.mt-indexlist__groups .mt-indexlist__group .mt-cells__title::after {
  display: none;
}

.mt-indexlist__groups .mt-indexlist__group--card .mt-cells__title {
  padding: 0;
}

.mt-indexlist__groups .mt-indexlist__group--actived .mt-cells__title {
  color: #07c16c;
}

.mt-indexlist__groups .mt-indexlist__group--sticky .mt-cells__title {
  position: sticky;
}

.mt-indexlist__groups .mt-cells--card .mt-indexlist__cell:last-of-type .mt-cell {
  margin-bottom: 0;
}

.mt-indexlist__groups .mt-indexlist__cell__lt {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-indexlist__groups .mt-indexlist__cell__rt {
  padding-right: 4rpx;
}

.mt-indexlist__groups .mt-indexlist__cell__del {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.mt-indexlist__tree {
  position: absolute;
  top: 50%;
  right: 0;
  z-index: 3;
  transform: translateY(-50%);
  text-align: center;
}

.mt-indexlist__tree__item {
  font-size: 22rpx;
  padding: 0 10rpx;
  margin-top: 6rpx;
  color: #808080;
  position: relative;
  font-weight: bold;
}

.mt-indexlist__tree__item > .mt-indexlist__tree__key {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  line-height: 32rpx;
}

.mt-indexlist__tree__item--actived > .mt-indexlist__tree__key {
  color: #ffffff;
  border-radius: 50%;
  background-color: #07c16c;
}

.mt-indexlist__indicator {
  position: absolute;
  right: 140rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
  display: none;
  z-index: 3;
  top: -100%;
}

.mt-indexlist__indicator:after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  border-radius: 100% 0% 100% 100%;
  background: rgba(0, 0, 0, 0.3);
  transform: rotate(45deg);
}

.mt-indexlist__indicator--show {
  display: block;
}

.mt-indexlist__indicator--tran {
  display: block;
  opacity: 0;
  transition: opacity 0.3s linear;
}
