.mt-radios {
  margin: 0 0 36rpx;
}

.mt-radios--column .mt-radios__items {
  display: grid;
}

.mt-radios--button .mt-radios__title {
  padding: 0 36rpx 30rpx;
}

.mt-radios--button .mt-radios__items {
  padding: 0 36rpx;
}

.mt-radios--dot.mt-radios--row .mt-radios__items,
.mt-radios--check.mt-radios--row .mt-radios__items {
  padding: 0 36rpx;
}

.mt-radios--divider .mt-radio--check,
.mt-radios--divider .mt-radio--dot {
  position: relative;
}

.mt-radios--divider .mt-radio--check::after,
.mt-radios--divider .mt-radio--dot::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #d8d8d8;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 30rpx;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-radios--divider .mt-radio--check::after,
  .mt-radios--divider .mt-radio--dot::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-radios--divider .mt-radio--check::after,
  .mt-radios--divider .mt-radio--dot::after {
    transform: scaleY(0.333);
  }
}

.mt-radios__title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 36rpx 20rpx;
}

.mt-radios--row .mt-radios__items .mt-radio {
  display: inline-flex;
  padding-left: 0;
  padding-right: 0;
  margin-right: 42rpx;
}

.mt-radios--row .mt-radios__items .mt-radio::after {
  border: none;
}

.mt-radios--button.mt-radios--row .mt-radio {
  margin-right: 0;
}

.mt-radios--button.mt-radios--row .mt-radio .mt-radio__content {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
