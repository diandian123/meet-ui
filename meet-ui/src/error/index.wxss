.mt-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  background: #ffffff;
}

.mt-error--global {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
}

.mt-error--local {
  position: relative;
}

.mt-error--local .mt-error__icon {
  width: 220rpx;
  height: 220rpx;
}

.mt-error--local .mt-error__btn {
  width: auto;
  margin: 30rpx;
}

.mt-error--local .mt-btn {
  height: 72rpx !important;
  font-size: 30rpx !important;
}

.mt-error__icon {
  width: 260rpx;
  height: 260rpx;
}

.mt-error__bd {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-error__text {
  font-size: 30rpx;
  color: #808080;
  padding: 10rpx 16vw 30rpx;
  text-align: center;
}

.mt-error__btn {
  margin: 60rpx;
}

.mt-error__ext {
  padding-bottom: 50rpx;
  color: #cccccc;
  font-size: 22rpx;
}
