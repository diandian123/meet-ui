.mt-result {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  overflow: hidden;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.mt-result__bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: nowrap;
  padding: 180rpx 100rpx 120rpx;
  text-align: center;
}

.mt-result__icon {
  margin-bottom: 40rpx;
  font-weight: lighter;
}

.mt-result__title {
  font-size: 38rpx;
  font-weight: bolder;
  color: #333333;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 2;
  margin-bottom: 42rpx;
}

.mt-result__desc {
  font-size: 30rpx;
  color: #5a5a5a;
  line-height: 1.5;
  margin-bottom: 42rpx;
}

.mt-result__ft {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  padding-bottom: 180rpx;
}
