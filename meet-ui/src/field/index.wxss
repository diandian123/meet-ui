.mt-field {
  margin: 0 36rpx 0;
  overflow: hidden;
}

.mt-field .mt-field__label {
  font-size: 32rpx;
  color: #555;
  line-height: 1.5;
}

.mt-field .mt-field__required {
  color: #fa5151;
  font-size: 32rpx;
  margin-left: 6rpx;
}

.mt-field .mt-field__tips {
  width: 100%;
  font-size: 26rpx;
  color: #808080;
  padding-top: 10rpx;
  line-height: 1.5;
}

.mt-field .mt-field__error {
  width: 100%;
  font-size: 26rpx;
  color: #fa5151;
  padding-top: 10rpx;
  line-height: 1.5;
}

.mt-field--margin {
  margin-bottom: 30rpx;
}

.mt-field--divider {
  position: relative;
}

.mt-field--divider::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-field--divider::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-field--divider::after {
    transform: scaleY(0.333);
  }
}

.mt-field--right .mt-radios .mt-radio {
  margin-right: 0;
  margin-left: 60rpx;
}

.mt-field--right .mt-checkboxs .mt-checkbox {
  margin-right: 0;
  margin-left: 60rpx;
}

.mt-field--row {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.mt-field--row.mt-field--divider {
  padding: 6rpx 0;
}

.mt-field--row.mt-field--divider .mt-field__tips {
  padding-top: 0;
  padding-bottom: 24rpx;
}

.mt-field--row.mt-field--divider .mt-field__error {
  padding-top: 0;
  padding-bottom: 24rpx;
}

.mt-field--row .mt-field__label {
  width: 174rpx;
  padding: 24rpx 0;
  margin-right: 20rpx;
  overflow: hidden;
}

.mt-field--row .mt-field__item {
  flex: 1;
}

.mt-field--row .mt-radio {
  padding-left: 0;
  padding-right: 0;
}

.mt-field--row .mt-checkbox {
  padding-left: 0;
  padding-right: 0;
}

.mt-field--column.mt-field--divider .mt-field__label {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-bottom: 0;
}

.mt-field--column.mt-field--divider .mt-field__tips {
  padding-top: 0;
  padding-bottom: 24rpx;
}

.mt-field--column.mt-field--divider .mt-field__error {
  padding-top: 0;
  padding-bottom: 24rpx;
}

.mt-field--column .mt-field__label {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 24rpx 0 16rpx 0;
}

.mt-field--column .mt-radios--divider .mt-radio::after,
.mt-field--column .mt-checkboxs--divider .mt-checkbox::after {
  left: 0;
}

.mt-field--input .mt-input--noborder {
  padding-right: 0;
}

.mt-field--input .mt-input--noborder .mt-input__content {
  padding: 0;
}

.mt-field--textarea .mt-textarea--noborder {
  padding-left: 0;
  padding-right: 0;
}

.mt-field--switch .mt-field__item {
  padding: 24rpx 0;
}

.mt-field--switch .mt-field__error {
  padding-bottom: 0;
  padding-top: 24rpx;
}

.mt-field--switch .mt-field__tips {
  padding-bottom: 0;
  padding-top: 24rpx;
}

.mt-field--link .mt-field__item {
  font-size: 32rpx;
  line-height: 1.5;
  padding: 24rpx 30rpx 24rpx 0;
}

.mt-field--link .mt-field__item {
  position: relative;
}

.mt-field--link .mt-field__item::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 50%;
  right: 6rpx;
  z-index: 0;
  border-width: 1px 1px 0 0;
  border-color: #aaaaaa;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.mt-field--text .mt-field__item {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  line-height: 1.5;
}

.mt-field--radio .mt-radios {
  margin: 0;
}

.mt-field--radio .mt-radios--dot.mt-radios--row .mt-radios__items,
.mt-field--radio .mt-radios--check.mt-radios--row .mt-radios__items {
  padding: 0;
}

.mt-field--checkbox .mt-checkboxs {
  margin: 0;
}

.mt-field--checkbox .mt-checkboxs--check.mt-checkboxs--row .mt-checkboxs__items,
.mt-field--checkbox .mt-checkboxs--square.mt-checkboxs--row .mt-checkboxs__items {
  padding: 0;
}
