.mt-comment {
  padding: 0 36rpx;
  margin-bottom: 42rpx;
}

.mt-comment__header {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-comment__user {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-comment__role,
.mt-comment__username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 18rpx;
  vertical-align: middle;
}

.mt-comment__usertype {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.mt-comment__quality {
  margin-left: 20rpx;
}

.mt-comment__operate {
  color: #808080;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 24rpx;
}

.mt-comment__operate__items {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-comment__ml {
  margin-left: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-comment__icon {
  width: 48rpx;
  height: 48rpx;
}

.mt-comment__num {
  font-size: 26rpx;
  margin-left: 6rpx;
}

.mt-comment__reply {
  margin-top: 24rpx;
  padding: 24rpx 30rpx;
  background: #f5f6f8;
  border-radius: 16rpx;
}

.mt-comment__reply__item {
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 5;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.mt-comment__reply__item:last-child {
  margin-bottom: 0;
}

.mt-comment__reply__name {
  font-weight: bold;
}

.mt-comment__reply--more {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  font-weight: bold;
}

.mt-comment__content {
  position: relative;
  overflow: hidden;
}

.mt-comment__content__wp {
  position: relative;
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
  margin-top: 20rpx;
  word-break: break-all;
}

.mt-comment__content__wp--limit {
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 5;
  text-overflow: initial;
}

.mt-comment__content__expand {
  width: 280rpx;
  position: absolute;
  right: -110rpx;
  bottom: 0;
  z-index: 1;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 1;
  color: #07c16c;
  padding-left: 70rpx;
  background-image: linear-gradient(to right, rgba(255, 255, 255, 0.1), white 15%, white);
}

.mt-comment__content__expand::after {
  content: '';
  display: inline-block;
  padding: 10rpx 60rpx;
}

.mt-comment__content__collapse {
  color: #07c16c;
}

.mt-comment__content__bd {
  display: inline;
}

.mt-comment__content__reply {
  color: #808080;
}

.mt-comment__share {
  font-size: 0;
  padding: 0 !important;
  width: auto !important;
  background: none;
}

.mt-comment__share:active {
  background: none;
}

.mt-comment__approve--ani {
  position: relative;
}

.mt-comment__approve--ani::after {
  content: '+1';
  width: 49rpx;
  height: 22rpx;
  color: #ffffff;
  line-height: 1.1;
  font-size: 20rpx;
  text-align: center;
  background-color: #fa5151;
  border-radius: 12rpx 12rpx 12rpx 0;
  position: absolute;
  top: -25rpx;
  left: 35rpx;
  z-index: 2;
  animation: 0.5s 1 forwards fadeInUp;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }
  80% {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
  100% {
    opacity: 0;
  }
}
