.mt-card {
  padding: 30rpx 36rpx;
}

.mt-card--radius {
  margin: 0 36rpx 24rpx;
  padding: 30rpx 30rpx;
}

.mt-card--divider {
  position: relative;
}

.mt-card--divider::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #d8d8d8;
  position: absolute;
  right: 36rpx;
  bottom: 0;
  left: 36rpx;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-card--divider::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-card--divider::after {
    transform: scaleY(0.333);
  }
}

.mt-card--left,
.mt-card--right {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.mt-card--top,
.mt-card--bottom {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.mt-card--top .mt-card__mark,
.mt-card--bottom .mt-card__mark {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 2;
}

.mt-card--top .mt-card__play,
.mt-card--bottom .mt-card__play {
  width: 64rpx;
  height: 64rpx;
}

.mt-card--top .mt-card__bd {
  margin: 20rpx 0 0 0;
}

.mt-card--bottom {
  background-color: #ffffff;
}

.mt-card--bottom .mt-card__bd {
  margin: 0 0 20rpx 0;
}

.mt-card--bottom .mt-card__keypoint {
  font-weight: normal;
  font-size: 32rpx;
  color: #333333;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 3;
}

.mt-card--left .mt-card__lt {
  position: relative;
  margin-right: 24rpx;
}

.mt-card--left .mt-card__keypoint {
  font-size: 34rpx;
}

.mt-card--left .mt-card__mark {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.mt-card--right .mt-card__rt {
  position: relative;
  margin-left: 24rpx;
}

.mt-card--right .mt-card__keypoint {
  font-size: 34rpx;
}

.mt-card--right .mt-card__mark {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 2;
}

.mt-card__play {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 1;
  width: 48rpx;
  height: 48rpx;
  transform: translate(-50%, -50%);
  opacity: 0.9;
}

.mt-card__ranking {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  font-size: 32rpx;
  color: #808080;
  width: 40rpx;
  background: #e9e9e9;
  border-radius: 16rpx 0 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-card__ranking--1 {
  background: #fa5151;
  color: #ffffff;
}

.mt-card__ranking--2 {
  background: #ff8f1f;
  color: #ffffff;
}

.mt-card__ranking--3 {
  background: #fec51d;
  color: #ffffff;
}

.mt-card__mark {
  font-size: 22rpx;
  line-height: 1;
  color: #ffffff;
  padding: 10rpx 16rpx;
  background: rgba(0, 0, 0, 0.35);
  border-radius: 30rpx;
}

.mt-card__img {
  vertical-align: middle;
}

.mt-card__lt {
  position: relative;
}

.mt-card__bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-wrap: nowrap;
  overflow: hidden;
}

.mt-card__rt {
  position: relative;
}

.mt-card__keypoint {
  font-weight: bolder;
  font-size: 34rpx;
  color: #333333;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 2;
  margin-bottom: 20rpx;
}

.mt-card__title {
  font-size: 32rpx;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 3;
  min-height: 92rpx;
}

.mt-card__tags {
  display: flex;
  margin-top: 10rpx;
}

.mt-card__tags .mt-card__tag {
  margin-right: 12rpx;
}

.mt-card__tags .mt-card__tag:last-child {
  margin-right: 0;
}

.mt-card__desc {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  font-size: 26rpx;
  color: #808080;
  margin-top: 10rpx;
}

.mt-card__desc .mt-card__desc--text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
