.mt-collapse {
  position: relative;
}

.mt-collapse::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #d8d8d8;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-collapse::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-collapse::after {
    transform: scaleY(0.333);
  }
}

.mt-collapse .mt-icon {
  font-weight: lighter;
}

.mt-collapse__hd {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-collapse__hd {
  position: relative;
}

.mt-collapse__hd::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #d8d8d8;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-collapse__hd::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-collapse__hd::after {
    transform: scaleY(0.333);
  }
}

.mt-collapse__hd--disabled {
  opacity: 0.5;
}

.mt-collapse__title {
  padding-right: 50rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mt-collapse__arrow--down {
  position: absolute;
  right: 0;
  z-index: 0;
  transform: rotate(0);
  transition: transform 0.3s;
}

.mt-collapse__arrow--up {
  position: absolute;
  right: 0;
  z-index: 0;
  transform: rotate(180deg);
  transition: transform 0.3s;
}

.mt-collapse__bd {
  height: 0;
  overflow: hidden;
  transition: height 0.3s;
}

.mt-collapse__detail {
  font-size: 30rpx;
  padding: 30rpx 0;
}
