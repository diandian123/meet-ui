.mt-search {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  position: relative;
}

.mt-search__main {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-search__main {
  position: relative;
}

.mt-search__main::after {
  content: '';
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 1px solid #d8d8d8;
  border-radius: 45rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-search__main::after {
    width: 200%;
    height: 200%;
    border-radius: 90rpx;
    transform: scale(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-search__main::after {
    width: 300%;
    height: 300%;
    border-radius: 135rpx;
    transform: scale(0.333);
  }
}

.mt-search__icon {
  width: 48rpx;
  height: 48rpx;
  color: #808080;
  margin-right: 20rpx;
}

.mt-search__input {
  flex: 1;
  line-height: 1.5;
  font-size: 32rpx;
  color: #333333;
}

.mt-search__label {
  position: absolute !important;
  box-sizing: content-box;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  z-index: 1;
}

.mt-search__label {
  position: relative;
}

.mt-search__label::after {
  content: '';
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 1px solid #d8d8d8;
  border-radius: 45rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-search__label::after {
    width: 200%;
    height: 200%;
    border-radius: 90rpx;
    transform: scale(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-search__label::after {
    width: 300%;
    height: 300%;
    border-radius: 135rpx;
    transform: scale(0.333);
  }
}

.mt-search__placeholder {
  font-size: 30rpx;
  color: #808080;
  flex-shrink: 0;
}

.mt-search__clear {
  height: 100%;
  width: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-search__clear-icon {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #d8d8d8;
  background-color: #d8d8d8;
  position: relative;
  display: inline-block;
  border-radius: 50%;
}

.mt-search__clear-icon::after {
  content: '';
  width: 18rpx;
  height: 2rpx;
  border-radius: 2rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%) rotate(45deg);
}

.mt-search__clear-icon::before {
  content: '';
  width: 2rpx;
  height: 18rpx;
  border-radius: 2rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%) rotate(45deg);
}

.mt-search__btn {
  margin-left: 24rpx;
  padding: 10rpx;
  font-size: 32rpx;
}
