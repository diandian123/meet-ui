.mt-actionsheet {
  font-size: 32rpx;
  line-height: 1.5;
  color: #333333;
  width: 100%;
  text-align: center;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  backface-visibility: hidden;
  overflow: hidden;
}

.mt-actionsheet--center .mt-actionsheet__action-bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-actionsheet--left .mt-actionsheet__action, .mt-actionsheet--left .mt-actionsheet__cancel,
.mt-actionsheet--left .mt-actionsheet__confirm {
  text-align: left;
}

.mt-actionsheet--left .mt-actionsheet__action--active .mt-actionsheet__action-checked {
  display: block;
  width: 16rpx;
  height: 32rpx;
  border-width: 0 1px 1px 0;
  border-style: solid;
  border-color: red;
  transform-origin: top center;
  transform: rotate(45deg);
}

.mt-actionsheet--left .mt-actionsheet__action-bd {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-actionsheet__title {
  font-size: 32rpx;
  font-weight: bolder;
  padding: 30rpx 36rpx;
}

.mt-actionsheet__title {
  position: relative;
}

.mt-actionsheet__title::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-actionsheet__title::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-actionsheet__title::after {
    transform: scaleY(0.333);
  }
}

.mt-actionsheet__desc {
  font-size: 26rpx;
  color: #808080;
  padding: 30rpx 36rpx;
}

.mt-actionsheet__desc {
  position: relative;
}

.mt-actionsheet__desc::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-actionsheet__desc::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-actionsheet__desc::after {
    transform: scaleY(0.333);
  }
}

.mt-actionsheet__items {
  max-height: 700rpx;
  overflow: auto;
}

.mt-actionsheet__item {
  position: relative;
}

.mt-actionsheet__item::after {
  content: '';
  transform-origin: 0 0;
  border-bottom: 1px solid #e9e9e9;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  transform-origin: 0 center;
}

@media (-webkit-min-device-pixel-ratio: 2) {
  .mt-actionsheet__item::after {
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3) {
  .mt-actionsheet__item::after {
    transform: scaleY(0.333);
  }
}

.mt-actionsheet__action, .mt-actionsheet__cancel,
.mt-actionsheet__confirm {
  box-sizing: border-box;
  width: 100% !important;
  font-size: 32rpx;
  font-weight: normal !important;
  line-height: 1.5;
  padding: 30rpx 36rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.mt-actionsheet__action:after, .mt-actionsheet__cancel:after,
.mt-actionsheet__confirm:after {
  border-width: 0;
}

.mt-actionsheet__action--hover {
  background-color: #f5f6f8;
}

.mt-actionsheet__action-bd {
  flex: 1;
}

.mt-actionsheet__action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.mt-actionsheet__cancel,
.mt-actionsheet__confirm {
  color: #808080;
  border-top: 20rpx solid #f5f6f8;
}

.mt-actionsheet__confirm {
  color: #333333;
}

.mt-actionsheet__action--disabled {
  opacity: 0.5;
}

.mt-actionsheet__action--disabled.mt-actionsheet__action--hover {
  background-color: #ffffff;
}

.mt-actionsheet__action-desc {
  display: block;
  color: #808080;
  font-size: 22rpx;
  margin-top: 10rpx;
}
