.mt-feed {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  padding: 0 36rpx;
  margin-bottom: 50rpx;
}

.mt-feed__hd {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  margin-bottom: 20rpx;
}

.mt-feed__hd-ct {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex-wrap: nowrap;
  margin-left: 18rpx;
  height: 72rpx;
  flex: 1;
}

.mt-feed__user {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-feed__username {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 1;
  color: #333333;
}

.mt-feed__usertype__wp {
  height: 100%;
  width: 16rpx;
  position: relative;
}

.mt-feed__usertype {
  position: absolute;
  top: 50%;
  left: 16rpx;
  z-index: 1;
  transform: translateY(-50%);
}

.mt-feed__time {
  font-size: 24rpx;
  line-height: 1;
  color: #808080;
}

.mt-feed__read {
  font-size: 26rpx;
  color: #808080;
}

.mt-feed__bd {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  font-size: 32rpx;
  line-height: 1.6;
}

.mt-feed__content--topic {
  color: #07c16c;
  margin-right: 10rpx;
}

.mt-feed__content {
  position: relative;
  overflow: hidden;
}

.mt-feed__content__text {
  display: inline;
  color: #333333;
}

.mt-feed__images {
  margin-top: 15rpx;
}

.mt-feed__ft {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 30rpx;
}

.mt-feed__operate {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  flex-wrap: nowrap;
}

.mt-feed__share {
  font-size: 0;
  margin: 0 !important;
  padding: 0 !important;
  width: auto !important;
  background: none;
}

.mt-feed__share:active {
  background: none;
}

.mt-feed__ml {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  margin-left: 60rpx;
}

.mt-feed__num {
  font-size: 26rpx;
  color: #808080;
  line-height: 1.5;
  margin-left: 6rpx;
}

.mt-feed__approve--ani {
  position: relative;
}

.mt-feed__approve--ani::after {
  content: '+1';
  width: 49rpx;
  height: 22rpx;
  color: #ffffff;
  line-height: 1.1;
  font-size: 20rpx;
  text-align: center;
  background-color: #fa5151;
  border-radius: 12rpx 12rpx 12rpx 0;
  position: absolute;
  top: -25rpx;
  left: 35rpx;
  z-index: 2;
  animation: 0.5s 1 forwards fadeInUp;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }
  80% {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
  100% {
    opacity: 0;
  }
}

.mt-feed__content__wp {
  position: relative;
  color: #333333;
  word-break: break-all;
}

.mt-feed__content__wp--limit {
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 5;
}

.mt-feed__content__expand {
  font-size: 32rpx;
  width: 280rpx;
  position: absolute;
  right: -110rpx;
  bottom: 0;
  z-index: 1;
  display: -webkit-box;
  white-space: normal;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 1;
  color: #333333;
  font-weight: 600;
  padding-left: 70rpx;
  background-image: linear-gradient(to right, rgba(255, 255, 255, 0.3), white 15%, white);
}

.mt-feed__content__expand::after {
  content: '';
  display: inline-block;
  padding: 10rpx 60rpx;
}
