.mt-btn {
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: normal;
  border: 2rpx solid transparent;
  outline: none;
  cursor: pointer;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  padding-left: 36rpx;
  padding-right: 36rpx;
}

.mt-btn::after {
  border: none;
}

.mt-button__icon {
  position: relative;
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}

.mt-btn--primary {
  background: #07c16c;
  color: #ffffff;
}

.mt-btn--plain {
  background: #ffffff;
  border: 2rpx solid #07c16c;
  color: #07c16c;
}

.mt-btn--secondary {
  background: #ffffff;
  border: 2rpx solid #d8d8d8;
  color: #808080;
}

.mt-btn--link {
  background: transparent;
  color: #07c16c;
  text-decoration: underline;
}

.mt-btn--primary.mt-btn--hover {
  background-color: #06ad60 !important;
}

.mt-btn--plain.mt-btn--hover {
  background-color: #ecfbf4 !important;
}

.mt-btn--secondary.mt-btn--hover {
  background-color: #e9e9e9 !important;
}

.mt-btn--warning.mt-btn--hover {
  background-color: #fd3d3d !important;
}

.mt-btn--disabled {
  opacity: 0.5;
}

@media only screen and (orientation: landscape) {
  .mt-btn {
    font-size: 4.8vmin;
    border: 0.26667vmin solid transparent;
  }
  .mt-btn .mt-button__icon {
    width: 5.86667vmin;
    height: 5.86667vmin;
    margin-right: 2.93333vmin;
  }
  .mt-btn--l {
    width: 86.93333vmin !important;
    height: 13.33333vmin !important;
    border-radius: 6.66667vmin !important;
  }
  .mt-btn--m {
    width: 64vmin !important;
    height: 13.33333vmin !important;
    border-radius: 6.66667vmin !important;
  }
  .mt-btn--s {
    width: 48.26667vmin !important;
    height: 13.33333vmin !important;
    border-radius: 6.66667vmin !important;
  }
}
